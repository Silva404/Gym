{% extends 'layout.njk' %}

{% block styles %}
    <link rel="stylesheet" href="/styles/index.css">
{% endblock styles %}

{% block content %}
    <div class="card table-container">
        <table >
            <thead>
                <tr>
                    <th>Membro</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for member in members %}
                    <tr>
                        <td>
                            <span style="background-image: url({{ member.avatar_url}})"></span>
                            {{ member.name }}
                        </td>
                        <td class="item">
                            {% for service in member.services %}
                                <span>{{ service }}</span>
                            {% endfor %}
                        </td>
                        <td>
                            <a href="/members/{{member.id}}" class="button">Ver</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}